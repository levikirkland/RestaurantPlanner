@page
@model WaterUtilPro.Pages.Settings.IndexModel

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Categories</h3>
                        <div class="card-tools">
                            <a asp-page="#" class="btn btn-sm btn-outline-secondary btn-block"><i class="fas fa-plus pr-2"></i>Add</a>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th >Name</th>
                                    <th >Description</th>
                                    <th ></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.Categories)
                                {
                                    <tr>
                                        <td class="col-1">@category.Id</td>
                                        <td class="col-1">@category.Name</td>
                                        <td class="col-4">@category.Description</td>
                                        <td class="col-1">
                                            <a asp-page="#" asp-route-id="@category.Id" class="btn-sm btn-outline-secondary"><i class="fas fa-pen pr-2"></i>Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Setting</h3>
                        <div class="card-tools">
                            <a asp-page="#" class="btn btn-sm btn-outline-secondary btn-block"><i class="fas fa-plus pr-2"></i>Add</a>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <table class="table table-sm">
                            <thead>
                                <tr>

                                </tr>
                            </thead>
                            <tbody>
   
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Unit Of Measure</h3>
                        <div class="card-tools">
                            <a asp-page="#" class="btn btn-sm btn-outline-secondary btn-block"><i class="fas fa-plus pr-2"></i>Add</a>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width: 10px">ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var uom in Model.UnitOfMeasures)
                                {
                                    <tr>
                                        <td class="col-1">@uom.Id</td>
                                        <td class="col-1">@uom.Name</td>
                                        <td class="col-4">@uom.Description</td>
                                        <td class="col-1">
                                            <a asp-page="#" asp-route-id="@uom.Id" class="btn-sm btn-outline-secondary"><i class="fas fa-pen pr-2"></i>Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Setting</h3>
                        <div class="card-tools">
                            <a asp-page="#" class="btn btn-sm btn-outline-secondary btn-block"><i class="fas fa-plus pr-2"></i>Add</a>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">User Management</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 350px;">
                                <input type="text" name="table_search" class="form-control float-right " placeholder="Search">
                                <div class="input-group-append pr-2">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <div class="input-group-append">
                                    <a asp-page="#" class="btn btn-sm btn-outline-secondary"><i class="fas fa-plus pr-2"></i>Add</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Full Name</th>
                                    <th>Username</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (var user in @Model.Users)
                                    {
                                        <tr>
                                        <td class="col-1">
                                            <a asp-page="#" asp-route-id="1" class="btn-sm btn-outline-secondary">@user.Id</a>
                                            
                                        </td>
                                        <td class ="col-1">@user.FullName</td>
                                        <td class ="col-1">@user.UserName</td>
                                        <td class ="col-1">
                                                @if (user.Active is true)
                                                {
                                                <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                <span class="badge badge-warning">InActive</span>
                                                }
                                            <td class ="col-1">
                                                <a asp-page="#" asp-route-id="1" class="btn-sm btn-outline-secondary"><i class="fas fa-pen pr-2"></i>Edit</a>
                                            </td>
                                        </tr>
                                    }
                             </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
