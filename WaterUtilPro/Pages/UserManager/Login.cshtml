@page

@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <partial name="_Styles" />
 </head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
                <h1>Restaurant Planner</h1> 
                <h5>Meal Planner Pro</h5>
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Sign in to start your session</p>

                    <form id="account" method="post">
                        <small> <span asp-validation-for="Input.Email" class="text-danger"></span></small>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email / Username">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <small> <span asp-validation-for="Input.Password" class="text-danger"></span></small>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>                           
                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <label asp-for="Input.RememberMe" style="padding: 0px!important;">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <br>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <!-- /.col -->
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>


                </div>


            </div>
            <!-- /.login-card-body -->           
        </div>
    <partial name="_Scripts" />

</body>
</html>

<partial name="_ValidationScriptsPartial" />

