@page
@model WaterUtilPro.Pages.UserManager.UserProfile

<link rel="stylesheet" href="~/@(nameof(WaterUtilPro)).styles.css" />

<div class="row">
    <div class="col-md-4">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title ">User Profile: @Model.user.FullName</h3>
            </div>

            <form method="post" asp-route-id="@Model.user.Id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="user.FirstName" class="control-label m-0 ml-1 p-0"></label>
                    <input asp-for="user.FirstName" class="form-control col-4 ml-1" />

                    <span asp-validation-for="user.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="user.LastName" class="control-label m-0 ml-1 p-0"></label>
                    <input asp-for="user.LastName" class="form-control col-4 ml-1" />
                    <span asp-validation-for="user.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="user.Email" class="control-label m-0 ml-1 p-0"></label>
                    <input asp-for="user.Email" class="form-control col-4 ml-1" />
                    <span asp-validation-for="user.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="user.Active" class="control-label col-2 ml-1"></label>
                    <input asp-for="user.Active" checked />
                    <span asp-validation-for="user.Active" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-secondary ml-1" />
                </div>
            </form>
            <div class="container">
                <div class="row">
                    <div class="span5">
                        <table class="table table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th>Roles</th>                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model.roles!)
                                {
                                    <tr>
                                        <td>@role</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>