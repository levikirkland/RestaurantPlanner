@page "{id:int}"
@model WaterUtilPro.Pages.VendorManager.EditModel

<h3 class="title">Edit vendor</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-id="@Model.Vendor.Id">
            <div class="row gutters">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <h6 class="mb-2 text-secondary">Vendor Details</h6>
                </div>
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <label asp-for="Vendor.Name" class="control-label m-0 ml-1 p-0"></label>
                    <input asp-for="Vendor.Name" class="form-control ml-1" />
                    <span asp-validation-for="Vendor.Name" class="text-danger"></span>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Vendor.Description" class="control-label m-0 ml-1 p-0"></label>
                        <input asp-for="Vendor.Description" class="form-control ml-1" />
                        <span asp-validation-for="Vendor.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Vendor.EmailAddress" class="control-label m-0 ml-1 p-0"></label>
                        <input asp-for="Vendor.EmailAddress" class="form-control ml-1" />
                        <span asp-validation-for="Vendor.EmailAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Vendor.Phone" class="control-label m-0 ml-1 p-0"></label>
                        <input asp-for="Vendor.Phone" class="form-control ml-1" />
                        <span asp-validation-for="Vendor.Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Vendor.Contact" class="control-label m-0 ml-1 p-0"></label>
                        <input asp-for="Vendor.Contact" class="form-control ml-1" />
                        <span asp-validation-for="Vendor.Contact" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row gutters">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <h6 class="mt-3 mb-2 text-secondary">Address</h6>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Vendor.Address" class="control-label m-0 ml-1 p-0"></label>
                        <input asp-for="Vendor.Address" class="form-control ml-1" />
                        <span asp-validation-for="Vendor.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Vendor.City" class="control-label m-0 ml-1 p-0"></label>
                        <input asp-for="Vendor.City" class="form-control ml-1" />
                        <span asp-validation-for="Vendor.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Vendor.State" class="control-label m-0 ml-1 p-0"></label>
                        <input asp-for="Vendor.State" class="form-control ml-1" />
                        <span asp-validation-for="Vendor.State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="Vendor.PostalCode" class="control-label m-0 ml-1 p-0"></label>
                        <input asp-for="Vendor.PostalCode" class="form-control ml-1" />
                        <span asp-validation-for="Vendor.PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row gutters">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="text-right">
                        <button type="button" id="submit" name="submit" class="btn btn-outline-secondary">Update</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn-sm btn-outline-secondary">Back to List</a>
</div>
<partial name="_ValidationScriptsPartial" />

